package TestHeroesMenu {		import flash.display.MovieClip;	import TestHeroesMenu.ScrollingMenu;			public class ScrollBar extends MovieClip {				public var letters=[];		public var hilight:Hilight		public var scrollingMenu:ScrollingMenu;		public function ScrollBar() {			// constructor code		}				public function init(names:Array, scrollingMenu:ScrollingMenu):void{			this.scrollingMenu = scrollingMenu			hilight= new Hilight()			addChild(hilight)			var lastLetter:String;			var counter=0			for (var i:int = 0; i < names.length; i++)			{				var thisletter = names[i].charAt(0)				if (thisletter!=lastLetter){					var scrollLetter = new MenuLetterSprite();					scrollLetter.textbox.text=thisletter					scrollLetter.letter = thisletter					addChild(scrollLetter)					scrollLetter.y = counter * 54					lastLetter=thisletter					letters.push(scrollLetter)					counter++				}							}			setHilight()		}				public function setHilight():void{						var firstHilightLetter = scrollingMenu.getFirstVisible()			for (var i:int = 0; i < letters.length; i++)			{				if (firstHilightLetter == letters[i].letter){					hilight.y=letters[i].y				}			}						var hilightletter = scrollingMenu.getLastVisible()				for (var i:int = 0; i < letters.length; i++)				{					if (hilightletter == letters[i].letter){						hilight.height=letters[i].y + (letters[i].height-hilight.y)					}				}		}	}	}
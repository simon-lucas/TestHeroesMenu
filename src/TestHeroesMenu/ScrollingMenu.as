package TestHeroesMenu{import flash.display.Sprite;public class ScrollingMenu extends Sprite{	var mItems=[];	var menuSprite:Sprite	const TOP= 65	const LEFT= 1020	const MAX = 900	var OFFSET = 0	public function ScrollingMenu()	{		super();	}		public function init(names:Array):void{		menuSprite = new Sprite()		addChild(menuSprite)		menuSprite.x=LEFT		menuSprite.y=TOP		OFFSET=TOP-menuSprite.y		//trace(names)		for (var i:int = 0; i < names.length; i++)		{			var mi= new MenuItemSprite()			mi.textbox.text=names[i]			mi.letter = names[i].charAt(0)			menuSprite.addChild(mi)			mItems.push(mi)			mi.x= 0			mi.y= 0 + (i*57)		}		menuSprite.y -= 10*57			showItems()	}		public function showItems():void{		OFFSET=TOP-menuSprite.y		for each (var item:MenuItemSprite in mItems)		{			item.visible = item.y < MAX+OFFSET && item.y >= TOP - menuSprite.y		}	}		public function getLastVisible():String{		for (var i:int = 0; i < mItems.length; i++)		{				if (mItems[i].y >  MAX+OFFSET) {					return mItems[i-1].letter				}				//trace(mItems[i].letter)		}		return "z"	}		public function getFirstVisible():String{		for (var i:int = 0; i < mItems.length; i++)		{				if (mItems[i].visible == true) {					return mItems[i].letter				}				//trace(mItems[i].letter)		}		return "z"	}	}}
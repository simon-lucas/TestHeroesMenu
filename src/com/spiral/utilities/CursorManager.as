package com.spiral.utilities {	import flash.display.Stage;	import flash.ui.Mouse;	import flash.events.KeyboardEvent;	import flash.display.Sprite;	/**	 * @author yoshi	 */	public class CursorManager extends Sprite {		private var __cursor : Boolean;		private var __keyNum : *;				public function CursorManager(keyNum:Number, myStage:Stage) {			//trace('myStage: ' + (myStage));			myStage.addEventListener(KeyboardEvent.KEY_DOWN, myKeyDown);						__keyNum=keyNum;			__cursor=false;			Mouse.hide();		}		private function myKeyDown(event : KeyboardEvent) : void {						var myKey = event.keyCode;			//trace(myKey)			if (myKey == __keyNum) {				if(__cursor){					//trace("hide")					Mouse.hide();					__cursor=false;				}else{					//trace("show")					__cursor=true;					Mouse.show();				}			}		}	}}
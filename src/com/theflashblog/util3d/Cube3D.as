	this.back = back;			this.top = top;			this.bottom = bottom;			this.size = left.width;			init();		}				private function init():void		{			var hs:Number = size/2;			top.rotationX = 90;			top.y = hs;			addChild(top);						bottom.rotationX = -90;			bottom.y = -hs;			addChild(bottom);						left.x = -hs;			left.rotationY = 90;			addChild(left);						right.x = hs;			right.rotationY = -90;			addChild(right);						back.z = hs;			addChild(back);						front.z = -hs;			addChild(front);		}		}}